# Используем официальный образ Node.js версии 18.19.0
FROM node:18.19.0-alpine

# Создайте директорию для приложения внутри контейнера
WORKDIR /app

# Копируйте package.json и package-lock.json (если есть)
COPY package*.json ./

# Установите зависимости проекта
RUN npm ci

# Копируйте исходный код приложения в контейнер
COPY . .

# Соберите приложение для продакшена
RUN npm run build

# Запустите приложение, используя node
CMD [ "npm", "run", "serve" ]